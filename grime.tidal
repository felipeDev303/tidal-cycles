-- Stutter/glitch effect
d4 $ stut 4 0.7 0.125 $ note "c5"
  # s "supersquare" # gain 0.9 # crush 6

-- Phasing (dos versiones levemente desincronizadas)
d1 $ stack [
  sound "bd*4" # gain 1.2,
