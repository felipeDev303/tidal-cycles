-- Patr贸n b谩sico 1-2 (kick en 1 y 3, snare en 2 y 4)
d1 $ sound "bd ~ sn ~ bd ~ sn ~" # gain 1.2

-- Kick pesado y seco + snare met谩lica (estilo 808/909 sampledado)
d1 $ stack [
  sound "bd*2 ~ bd ~" # gain 1.3 # speed 0.9,
  sound "~ ~ sn ~ ~ ~ sn ~" # gain 1.1 # speed 1.2
]

-- Broken beat: ritmo fragmentado t铆pico del grime
d1 $ sound "bd ~ ~ bd ~ sn ~ bd" # gain 1.2

-- Hi-hats sincopados con patr贸n euclidiano
d2 $ sound "hh(5,8)" 
  # gain (range 0.7 1.1 $ fast 4 sine)
  # speed (range 1.1 1.3 $ slow 2 sine)

-- Hi-hats r谩pidos (sensaci贸n de urgencia)
